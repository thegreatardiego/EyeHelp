<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:alpha="0.7"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="28dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/header"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/btnColorDetector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Color Detector with Voice"
            app:cornerRadius="32dp"/>



        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/Ishiharatest"
            android:text="Ishihara Test"
            app:cornerRadius="32dp"/>



        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/btnAwareness"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Color Blindness Awareness"
            app:cornerRadius="32dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/btnColorAid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ColorAid"
            app:cornerRadius="32dp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/btnFilters"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Preset Filters"
            app:cornerRadius="32dp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/btnNearby"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Nearby Eye Specialists"
            app:cornerRadius="32dp"/>


        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Reset Password"
            app:cornerRadius="32dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="About"
            app:cornerRadius="32dp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign Out"
            app:cornerRadius="32dp"/>



    </LinearLayout>


</RelativeLayout>